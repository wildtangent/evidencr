.span3
  .post_it_note
    = simple_format(post.observation, :class => "larger")
    %p 
      = t("posts.index.with")
      = all_pupils(post.pupils).to_sentence.html_safe
      
    %p
      %i= post.categories.map(&:short_name).sort.to_sentence.html_safe

    
    %p.date= post.observed_on
    
    %p.edit
      = link_to(t("pupils.show.posts.edit"), edit_post_path(post))
      
    %p.destroy
      = link_to(t("posts.index.destroy"), post_path(post), :method => :delete, :confirm => t("posts.index.confirm_destroy"))
