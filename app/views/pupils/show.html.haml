- content_for :javascripts do
  = javascript_include_tag("bootstrap-tooltip")
  = javascript_include_tag("bootstrap-popover")
  = javascript_include_tag("pupils")

.row
  .span3
    = image_tag(@pupil.profile, :class => "profile-large")
    
  .span6
    %h1
      = @pupil.first_name
      = @pupil.last_name
      
  .span3
    = link_to(t("pupils.show.new_post"), new_pupil_post_path(@pupil), :class => "btn btn-success")
    = link_to(t("pupils.show.edit"), edit_pupil_path(@pupil), :class => "btn btn-primary")

  .row
    .span8
      %h2= t("pupils.show.posts.title")
      
      .row
        = render :partial => "post", :collection => @pupil.posts